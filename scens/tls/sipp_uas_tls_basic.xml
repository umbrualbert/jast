<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE scenario SYSTEM "sipp.dtd">

<!--
  SIPp UAS Scenario - TLS/SIPS Basic Responder

  This scenario demonstrates a basic SIP server over TLS (SIPS).

  Usage:
    sipp -t l1 -tls_cert /certs/sipp.crt -tls_key /certs/sipp.key \
         -sf /scens/tls/sipp_uas_tls_basic.xml \
         -p 5061

  Features:
    - TLS transport (SIPS)
    - Auto-answer with 180 Ringing and 200 OK
    - Secure signaling

  Note: Listens on port 5061 for TLS connections
-->

<scenario name="UAS TLS Basic Responder">

  <!-- Receive INVITE over TLS -->
  <recv request="INVITE" crlf="true">
  </recv>

  <!-- Send 100 Trying -->
  <send>
    <![CDATA[

      SIP/2.0 100 Trying
      [last_Via:]
      [last_From:]
      [last_To:];tag=[pid]SIPpTag01[call_number]
      [last_Call-ID:]
      [last_CSeq:]
      Content-Length: 0

    ]]>
  </send>

  <!-- Send 180 Ringing -->
  <send retrans="500">
    <![CDATA[

      SIP/2.0 180 Ringing
      [last_Via:]
      [last_From:]
      [last_To:];tag=[pid]SIPpTag01[call_number]
      [last_Call-ID:]
      [last_CSeq:]
      Contact: <sips:[local_ip]:[local_port]>
      Content-Length: 0

    ]]>
  </send>

  <!-- Pause before answering (simulate ring time) -->
  <pause milliseconds="1000"/>

  <!-- Send 200 OK for INVITE -->
  <send retrans="500">
    <![CDATA[

      SIP/2.0 200 OK
      [last_Via:]
      [last_From:]
      [last_To:];tag=[pid]SIPpTag01[call_number]
      [last_Call-ID:]
      [last_CSeq:]
      Contact: <sips:[local_ip]:[local_port]>
      Content-Type: application/sdp
      Content-Length: [len]

      v=0
      o=user1 53655765 2353687637 IN IP[local_ip_type] [local_ip]
      s=TLS SIPp Call
      c=IN IP[media_ip_type] [media_ip]
      t=0 0
      m=audio [media_port] RTP/AVP 0 8 101
      a=rtpmap:0 PCMU/8000
      a=rtpmap:8 PCMA/8000
      a=rtpmap:101 telephone-event/8000
      a=fmtp:101 0-15
      a=ptime:20
      a=sendrecv

    ]]>
  </send>

  <!-- Receive ACK -->
  <recv request="ACK" rtd="true" crlf="true">
  </recv>

  <!-- Receive BYE -->
  <recv request="BYE">
  </recv>

  <!-- Send 200 OK for BYE -->
  <send>
    <![CDATA[

      SIP/2.0 200 OK
      [last_Via:]
      [last_From:]
      [last_To:]
      [last_Call-ID:]
      [last_CSeq:]
      Content-Length: 0

    ]]>
  </send>

  <!-- Statistics -->
  <ResponseTimeRepartition value="10, 20, 30, 40, 50, 100, 150, 200"/>
  <CallLengthRepartition value="10, 50, 100, 500, 1000, 5000, 10000"/>

</scenario>
